    Layout = null;
 }
<html ng-app>
    <head>
        <title>WhiteBorad</title>
        <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css"/>
        <script src="~/Scripts/angular.min.js"></script>
        <script src="~/Scripts/Introduct.js"></script>
        <style type="text/css">
        .grid {
            width: 200px;
            height: 30px
        }
        </style>

    </head>
    <body>
    <table style="width: 100%; table-layout: fixed">
        <tr>
            <td id="hegang">blabla</td>
            <td id="liujing">
<div ng-controller ="IntroductionController">
    <form class="form-horizontal">
        <div style="padding-left: 160px">
            <h3>Introduce Yourself</h3>
        </div>
        <div class = "control-group">
            <label class="control-label"><strong>Name:</strong></label>
            <div class="controls">
                <input type = "text" ng-model="name"  style="width: 200px; height: 30px"/>
            </div>
        </div>
        <div class = "control-group">
            <label class="control-label"><strong>Age:</strong></label>
            <div class="controls">
                <input type="number" min="0" ng-model="age" style="width: 200px; height: 30px"/>
            </div>
        </div>
        <div class = "control-group">
            <label class="control-label"><strong>Sex:</strong></label>
            <div class="controls">
                <select id="sex" ng-model="sex" style="width: 200px; height: 30px">
                    <option value="male" selected="selected">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>
        </div>
        <div class = "control-group">
            <label class="control-label"><strong>Hometown:</strong></label>
            <div class="controls">
                <input type = "text" ng-model="hometown" style="width: 200px; height: 30px"/>
            </div>
        </div>
        <div class = "control-group">
            <label class="control-label"><strong>Hobby:</strong></label>
            <div class="controls">
                <input type = "text" ng-model="hobby" style="width: 200px; height: 30px"/>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <input type="button" ng-click ="AddAction()" value="Submit"/>
            </div>
        </div>
        <div class="control-group">
            <div style="padding-left: 160px">
            <h3>Introduction</h3>
            </div>
            <ul>
                <li ng-repeat="person in persons" style="list-style: none">
                    <i class="icon-user"> </i> I am {{person.Name}}, {{person.Age}}, {{person.Sex}}. My hometown is {{person.Hometown}} and I like {{person.Hobby}}.
                </li>
            </ul>

        </div>
    </form>
</div>
