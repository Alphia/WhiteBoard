@{ 
    Layout = null;
 }
<html ng-app>
    <head>
        <title>WhiteBorad</title>
        <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css"/>
        <script src="~/Scripts/jquery-1.7.1.min.js"></script>
        <script src="~/Scripts/angular.min.js"></script>
        <script src="~/Scripts/Introduct.js"></script>
    </head>
    <body>
    <table style="width: 100%; table-layout: fixed">
        <tr>
            <td id="hegang">blabla</td>
            <td id="liujing">
            <div ng-controller ="IntroductionController">
                    <div>
                    <h3>Introduce Yourself</h3>               
                    <p>Name:<input type = "text" ng-model="name"/></p>
                    <p>Age:<input type="number" min="0" ng-model="age" /></p>
                    <p>Sex:
                        <select id="sex" ng-model="sex">
                            <option value="male" selected="selected">Male</option>
                            <option value="female">Female</option>
                        </select>
                    </p>
                    <p>Hometown:<input type = "text" ng-model="hometown" /></p>
                    <p>Hobby:<input type = "text" ng-model="hobby" /></p>
                    <input type="button" ng-click ="AddAction()" value="Submit"/>
                    </div>
                    <div>
                        <h3>Introduction</h3>
                        <ul>
                            <li ng-repeat="person in persons">
                                I am {{person.Name}},{{person.Age}},{{person.Sex}}.My hometown is {{person.Hometown}}
                                and I like {{person.Hobby}}.
                            </li>
                        </ul>
                    </div>
                </div>
            </td>
            <td id="chenghong">blabla</td>
         </tr>   
    </table>
    </body>
</html>


